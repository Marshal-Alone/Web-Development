<% layout("layouts/boilerplate") %>

    <body>
        <h1>All Listings</h1>
        <form action="/listings/new" method="get">
            <button>Create new listing</button>
        </form>

        <div class="row row-cols-lg-3 row-cols-md-1 row-cols-sm-1">
            <%for(let listing of all_listings){%>
                <a class="listing-link" href="/listings/<%=listing._id%>">
                    <div class="card col">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="<%=listing.image.filename%>" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <b>
                                    <%=listing.title%>
                                </b>
                            </h5>
                            <p class="card-text">
                                <%=listing.description%>
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                &#8377;<%=listing.price.toLocaleString("en-in")%>/night
                            </li>

                    </div>
                </a>

                <br>
                <%}%>
        </div>

        <ul>
            <%for(let listing of all_listings){%>
                <li>
                    <a href="/listings/<%=listing._id%>">
                        <%=listing.title%>
                    </a>
                    <br>
                </li>
                <%}%>
        </ul>
    </body>